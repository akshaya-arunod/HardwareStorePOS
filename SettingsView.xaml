<UserControl x:Class="HardwareStore.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="867.286" d:DesignWidth="673.286"
             Background="#FFFFFF">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" HorizontalAlignment="Left" Width="700">

            <!-- Title -->
            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Foreground="#333" 
                       HorizontalAlignment="Left" Margin="0,0,0,40"/>

            <!-- App Theme -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Left" >
                <TextBlock Text="App Theme"
               FontWeight="SemiBold"
               Foreground="#555"
               VerticalAlignment="Center"
               Margin="0,0,10,0"/>
                <ComboBox SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
              Width="180" Height="35"
              Background="White"
              BorderBrush="#CCC"
              BorderThickness="1"
              Padding="5"
              VerticalAlignment="Center">
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Dark"/>
                </ComboBox>
            </StackPanel>



            <!-- Backup Location -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Backup Location" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                <DockPanel>
                    <TextBox Text="{Binding BackupLocation, Mode=TwoWay}" IsReadOnly="True" Height="35"
                             Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="8"
                             VerticalContentAlignment="Center" Width="350"  />
                    <Button Content="Browse" Width="80" Height="35" Margin="0,0,200,0"
                            Background="#0078D7" Foreground="White" BorderThickness="0"
                            Cursor="Hand" Command="{Binding BrowseBackupLocationCommand}"/>
                </DockPanel>
            </StackPanel>

            <!-- Admin Section -->
            <StackPanel Margin="0,0,160,30">
                <TextBlock Text="Change Admin Password" FontSize="18" FontWeight="Bold" Foreground="#444" Margin="0,0,0,10"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Foreground="#555" Margin="0,5,0,2"/>
                <TextBox Text="{Binding AdminUsername, Mode=TwoWay}" Height="35" Padding="8"
                         Background="White" BorderBrush="#CCC" BorderThickness="1"/>

                <TextBlock Text="Current Password" FontWeight="SemiBold" Foreground="#555" Margin="0,10,0,2"/>
                <PasswordBox Height="35" Padding="8" BorderBrush="#CCC" BorderThickness="1"
                             PasswordChanged="AdminCurrentPasswordBox_PasswordChanged"/>

                <TextBlock Text="New Password" FontWeight="SemiBold" Foreground="#555" Margin="0,10,0,2"/>
                <PasswordBox Height="35" Padding="8" BorderBrush="#CCC" BorderThickness="1"
                             PasswordChanged="AdminNewPasswordBox_PasswordChanged"/>

                <Button Content="Change Password" Width="160" Height="40" Margin="0,15,0,0" HorizontalAlignment="Left"
                        Background="#0078D7" Foreground="White" BorderThickness="0"
                        Cursor="Hand" Command="{Binding ChangeAdminPasswordCommand}"/>
            </StackPanel>

            <!-- Cashier Section -->
            <StackPanel Margin="0,0,160,30">
                <TextBlock Text="Change Cashier Password" FontSize="18" FontWeight="Bold" Foreground="#444" Margin="0,0,0,10"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Foreground="#555" Margin="0,5,0,2"/>
                <TextBox Text="{Binding CashierUsername, Mode=TwoWay}" Height="35" Padding="8"
                         Background="White" BorderBrush="#CCC" BorderThickness="1"/>

                <TextBlock Text="Current Password" FontWeight="SemiBold" Foreground="#555" Margin="0,10,0,2"/>
                <PasswordBox Height="35" Padding="8" BorderBrush="#CCC" BorderThickness="1"
                             PasswordChanged="CashierCurrentPasswordBox_PasswordChanged"/>

                <TextBlock Text="New Password" FontWeight="SemiBold" Foreground="#555" Margin="0,10,0,2"/>
                <PasswordBox Height="35" Padding="8" BorderBrush="#CCC" BorderThickness="1"
                             PasswordChanged="CashierNewPasswordBox_PasswordChanged"/>

                <Button Content="Change Password" Width="160" Height="40" Margin="0,15,0,0" HorizontalAlignment="Left"
                        Background="#0078D7" Foreground="White" BorderThickness="0"
                        Cursor="Hand" Command="{Binding ChangeCashierPasswordCommand}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
