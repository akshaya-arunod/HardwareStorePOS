<Window x:Class="HardwareStore.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Category" Height="240" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FontFamily="Segoe UI" FontSize="14">

    <Border Background="White" CornerRadius="10" Margin="16" Padding="20" BorderBrush="#E5E7EB" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Label -->
            <TextBlock Text="Category Name"
                       FontWeight="SemiBold"
                       Foreground="#111827"
                       Margin="0,0,0,8"/>

            <!-- Textbox -->
            <TextBox x:Name="CategoryNameBox"
                     Grid.Row="1"
                     Height="32"
                     Background="White"
                     BorderBrush="#D1D5DB"
                     BorderThickness="1"
                     Padding="8"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,12"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,12,0,0">
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Background="#E5E7EB"
                        Foreground="#374151"
                        BorderBrush="#D1D5DB"
                        Padding="10,4"
                        Margin="0,0,10,0"
                        Width="80"
                        Height="32"
                        Cursor="Hand"
                        />

                <Button Content="Save"
                        Click="Save_Click"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="#2563EB"
                        Padding="10,4"
                        Width="80"
                        Height="32"
                        Cursor="Hand"
                        />
            </StackPanel>
        </Grid>
    </Border>
</Window>
