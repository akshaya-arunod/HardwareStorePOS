<Window x:Class="HardwareStore.Views.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Item"
        Width="460"
        Height="617"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FontFamily="Segoe UI"
        FontSize="14">

    <Border Background="White"
            CornerRadius="10"
            Margin="16"
            Padding="20"
            BorderBrush="#E5E7EB"
            BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Header -->
                <RowDefinition Height="*" />
                <!-- Form -->
                <RowDefinition Height="Auto" />
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Add New Item"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#111827"
                       Margin="0 0 0 16"/>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top">
                <!-- Item Name -->
                <TextBlock Text="Item Name" Margin="0 6 0 2"/>
                <TextBox x:Name="ItemNameTextBox"
                         Height="34"
                         Margin="0 0 0 10"
                         Padding="8"
                         BorderBrush="#D1D5DB"
                         VerticalContentAlignment="Center"/>

                <!-- Category -->
                <TextBlock Text="Category" Margin="0 6 0 2"/>
                <ComboBox x:Name="CategoryComboBox"
                          Height="34"
                          Margin="0 0 0 10"
                          Padding="4"
                          BorderBrush="#D1D5DB"
                          VerticalContentAlignment="Center"/>

                <!-- Price -->
                <TextBlock Text="Price (LKR)" Margin="0 6 0 2"/>
                <TextBox x:Name="PriceTextBox"
                         Height="34"
                         Margin="0 0 0 10"
                         Padding="8"
                         BorderBrush="#D1D5DB"
                         VerticalContentAlignment="Center"/>
                <!-- Discount (%) -->
                <TextBlock Text="Discount (%)" Margin="0 6 0 2"/>
                <TextBox x:Name="DiscountTextBox"
                 Height="34"
                 Margin="0 0 0 10"
                 Padding="8"
                 BorderBrush="#D1D5DB"
                 VerticalContentAlignment="Center"/>


                <!-- Stock -->
                <TextBlock Text="Stock" Margin="0 6 0 2"/>
                <TextBox x:Name="StockTextBox"
                         Height="34"
                         Margin="0 0 0 10"
                         Padding="8"
                         BorderBrush="#D1D5DB"
                         VerticalContentAlignment="Center"/>

                <!-- SKU -->
                <TextBlock Text="SKU" Margin="0 6 0 2"/>
                <TextBox x:Name="SKUTextBox"
                         Height="34"
                         Margin="0 0 0 10"
                         Padding="8"
                         BorderBrush="#D1D5DB"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 20 0 0">
                <Button Content="Cancel"
                        Width="80"
                        Height="34"
                        Margin="0 0 10 0"
                        Background="#E5E7EB"
                        Foreground="#374151"
                        BorderBrush="#D1D5DB"
                        Click="CancelButton_Click"/>

                <Button Content="Add"
                        Width="80"
                        Height="34"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="#2563EB"
                        Click="AddButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
