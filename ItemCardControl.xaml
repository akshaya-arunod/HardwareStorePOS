<UserControl x:Class="HardwareStore.Views.ItemCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:HardwareStore.Converters"

             Width="280" Height="150" Margin="10">

    <UserControl.Resources>
        <conv:StockToBackgroundColorConverter x:Key="StockToBackgroundColorConverter" />
        <conv:StockToForegroundColorConverter x:Key="StockToForegroundColorConverter"/>
    </UserControl.Resources>

    <Border Background="White" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1" Padding="12" >
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" >
            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
            <TextBlock Text="{Binding SKU}" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
            <TextBlock Text="{Binding Price, StringFormat='Rs. {0:F2}'}" FontSize="14" Foreground="#111827" Margin="0,8,0,0"/>

            <Border Background="{Binding Stock, Converter={StaticResource StockToBackgroundColorConverter}}"
                    CornerRadius="8" Padding="4" Margin="0,10,0,0" HorizontalAlignment="Left">
                <TextBlock Text="{Binding Stock, StringFormat='Stock: {0}'}"
                           Foreground="{Binding Stock, Converter={StaticResource StockToForegroundColorConverter}}"
                           FontSize="12" FontWeight="SemiBold"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
