<Window x:Class="HardwareStore.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Processing"
        WindowStartupLocation="CenterScreen"
        Height="818" Width="597"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="52"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="24" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Summary Card Style -->
        <Style x:Key="SummaryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Balance Display Style -->
        <Style x:Key="BalanceDisplayStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,16,0,24"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource CardStyle}" Grid.ColumnSpan="3" Margin="20,20,20,20">
            <StackPanel>
                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="💳 Payment" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#212121"/>
                        <TextBlock Text="Complete your transaction" 
                                   FontSize="14" 
                                   Foreground="#757575"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Order Summary Card -->
                <Border Style="{StaticResource SummaryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="ORDER SUMMARY" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="#757575"
                                   Margin="0,0,0,16"/>

                        <!-- Subtotal -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Subtotal" FontSize="16" Foreground="#424242"/>
                            <TextBlock x:Name="txtSubtotal" 
                                       Grid.Column="1" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="#424242"/>
                        </Grid>

                        <!-- Discount -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Discount Applied" FontSize="16" Foreground="#424242"/>
                            <TextBlock x:Name="txtDiscount" 
                                       Grid.Column="1" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="#2E7D32"/>
                        </Grid>

                        <!-- Divider -->
                        <Rectangle Height="1" Fill="#BDBDBD" Margin="0,0,0,16"/>

                        <!-- Final Total -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="TOTAL AMOUNT" FontSize="16" FontWeight="Bold" Foreground="#212121"/>
                            <TextBlock x:Name="txtFinalTotal" 
                                       Grid.Column="1" 
                                       FontSize="24" 
                                       FontWeight="Bold" 
                                       Foreground="#2E7D32"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Customer Name -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Customer Name:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
                    <TextBox x:Name="txtCustomerName" Height="40" FontSize="14" Padding="10" 
                             Background="White" BorderBrush="#E0E0E0" BorderThickness="1" 
                             VerticalContentAlignment="Center"/>
                </StackPanel>


                <!-- Cash Input Section -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="💰 CASH RECEIVED" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Foreground="#757575"
                               Margin="0,0,0,12"/>
                    <TextBox x:Name="txtCashReceived" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Text="0.00"
                             TextAlignment="Right"/>
                    <TextBlock Text="Enter the amount of cash received from customer" 
                               FontSize="12" 
                               Foreground="#9E9E9E"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Balance Display -->
                <Border Style="{StaticResource BalanceDisplayStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="CHANGE DUE" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#1565C0"/>
                            <TextBlock Text="Amount to return to customer" 
                                       FontSize="12" 
                                       Foreground="#1976D2"
                                       Opacity="0.8"/>
                        </StackPanel>
                        <TextBlock x:Name="txtBalance" 
                                   Grid.Column="1"
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#1976D2"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Cancel" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Grid.Column="0"/>

                    <Button Content="✅ Complete Payment" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Grid.Column="2"
                            Click="ConfirmPayment_Click"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>