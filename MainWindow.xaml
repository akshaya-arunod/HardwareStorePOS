<Window x:Class="HardwareStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareStore"
        mc:Ignorable="d"
         Title="Login" Height="520" Width="950" Background="Transparent" 
         WindowStartupLocation="CenterScreen" WindowStyle="None" 
         AllowsTransparency="True">

    <Border Background="White" CornerRadius="20" Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <!-- Close Button -->
            <Button Content="✕"
            Width="40" Height="40"
            FontSize="14"
            Background="Transparent"
            Foreground="Black"
            BorderThickness="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="CloseButton_Click"
            Margin="0,20,-365,0"
            Cursor="Hand"/>

            <!-- LEFT IMAGE -->
            <Image Grid.Column="0" Source="Images/login-illustration.png" Stretch="Uniform" />

            <!-- Right Login Panel -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="0,0,0,0">

                <TextBlock Text="LOGIN" FontSize="26" FontWeight="Bold" Foreground="#003366" Margin="0,0,0,20" />

                <TextBlock Text="Username" FontWeight="SemiBold" />
                <TextBox x:Name="UsernameTextBox"
                 Height="35" Margin="0,5,0,15" Padding="8"
                 Text="username" Foreground="Gray"
                 GotFocus="UsernameTextBox_GotFocus"
                 LostFocus="UsernameTextBox_LostFocus" />
                
                <TextBlock Text="Password" FontWeight="SemiBold" />
                <Grid Margin="0,5,0,15" Height="35">
                    <PasswordBox x:Name="PasswordBox" Padding="8"
                 GotFocus="PasswordBox_GotFocus"
                 LostFocus="PasswordBox_LostFocus" />

                    <TextBlock x:Name="PasswordPlaceholder"
               Text="password"
               Foreground="Gray"
               Margin="10,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False" />
                </Grid>



                <Button Content="login" Height="40" Background="#003366" Foreground="White" FontWeight="Bold" BorderThickness="0"
                    Margin="0,10,0,0" Cursor="Hand" Click="LoginButton_Click"/>


            </StackPanel>
        </Grid>
    </Border>
</Window>
