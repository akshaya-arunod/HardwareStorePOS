<Window x:Class="HardwareStore.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="720" Width="1200" Background="#F9FAFB" 
        FontFamily="Segoe UI" FontSize="14" >
    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow" BlurRadius="6" ShadowDepth="2" Color="#22000000" />

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12 8"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E90FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1C86EE"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#1E90FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Panel -->
        <DockPanel Grid.Column="0" Background="#2C3E50" LastChildFill="True">

            <!-- Logout Button at Bottom -->
            <Button Style="{StaticResource SidebarButtonStyle}" 
                DockPanel.Dock="Bottom" 
                Margin="8 16"
                Click="LogoutButton_Click" Height="47">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="⎋" FontSize="16" Margin="0 0 8 0"/>
                        <!-- Unicode logout icon -->
                        <TextBlock Text="Logout" FontSize="16"/>
                    </StackPanel>
            </Button>


            <!-- Top Navigation Area -->
            <StackPanel DockPanel.Dock="Top">
                <TextBlock Text="Hardware Store" 
                   Foreground="White" FontSize="24" FontWeight="SemiBold" 
                   Margin="24 32 0 32"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Margin="8 4" Content="Dashboard"    Click="DashboardButton_Click" />
                <Button Style="{StaticResource SidebarButtonStyle}" Margin="8 4" Content="Inventory"    Click="InventoryButton_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Margin="8 4" Content="Categories"   Click="CategoriesButton_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Margin="8 4" Content="Reports"      Click="ReportsButton_Click"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Margin="8 4" Content="Settings"     Click="SettingsButton_Click"/>
            </StackPanel>

        </DockPanel>



        <!-- Main Content -->
        <Border Grid.Column="1" Padding="24" Background="#FFFFFF" >
            <ContentControl x:Name="MainContentControl"/>
        </Border>
    </Grid>
</Window>
