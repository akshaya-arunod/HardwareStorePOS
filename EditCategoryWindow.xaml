<Window x:Class="HardwareStore.Views.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Category"
        Width="400"
        Height="250"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB"
        FontFamily="Segoe UI" FontSize="14">

    <Border Background="White"
            CornerRadius="10"
            Margin="16"
            Padding="20"
            BorderBrush="#E5E7EB"
            BorderThickness="1">

        <StackPanel VerticalAlignment="Stretch">
            <!-- Header -->
            <TextBlock Text="Edit Category Name"
                       FontWeight="SemiBold"
                       FontSize="16"
                       Foreground="#111827"
                       Margin="0,0,0,12"/>

            <!-- Textbox -->
            <TextBox x:Name="CategoryNameBox"
                     Height="36"
                     Background="White"
                     BorderBrush="#D1D5DB"
                     BorderThickness="1"
                     Padding="10,4"
                     VerticalContentAlignment="Center"
                     Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Width="80"
                        Height="32"
                        Background="#E5E7EB"
                        Foreground="#374151"
                        BorderBrush="#D1D5DB"
                        Margin="0,0,10,0"
                        Padding="10,4"
                        Cursor="Hand"
                        Click="Cancel_Click" />

                <Button Content="Save"
                        Width="80"
                        Height="32"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderBrush="#2563EB"
                        Padding="10,4"
                        Cursor="Hand"
                        Click="Save_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
