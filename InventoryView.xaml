<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HardwareStore.Views"
             xmlns:conv="clr-namespace:HardwareStore.Converters"
             xmlns:models="clr-namespace:HardwareStore.Models"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="HardwareStore.Views.InventoryView"
             Background="#F3F4F6" av:DesignHeight="546.96" av:DesignWidth="1063">

    <UserControl.Resources>
        <!-- Converters -->
        <conv:StockToBackgroundColorConverter x:Key="StockToBackgroundColorConverter" />
        <conv:StockToForegroundColorConverter x:Key="StockToForegroundColorConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="49"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Inventory Management" FontSize="24" FontWeight="Bold" Foreground="#111827" DockPanel.Dock="Left" VerticalAlignment="Center" />
            <Button DockPanel.Dock="Right" Width="120" Height="36" Background="#3B82F6" Foreground="White" FontWeight="SemiBold" Margin="300,0,0,0"
                    Cursor="Hand" Click="AddItemButton_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <TextBlock Text="+" FontSize="16" Margin="0,-4,6,0" />
                    <TextBlock Text="Add Item" />
                </StackPanel>
            </Button>
        </DockPanel>

        <!-- Search and Filter -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20" >
            <!-- Search Box -->
            <Grid HorizontalAlignment="Stretch" Margin="0,0,16,0" Width="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="🔍" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#9CA3AF" FontSize="16" />

                <TextBox x:Name="SearchTextBox" Grid.Column="1" VerticalContentAlignment="Center" Padding="6,0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>

            <!-- Category Filter -->
        </StackPanel>

        <!-- Table Layout for Items -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding Items}"
                  BorderThickness="0"
                  SizeChanged="ItemsListView_SizeChanged"
                  x:Name="ItemsListView">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item Name" Width="180" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="SKU" Width="100" DisplayMemberBinding="{Binding SKU}" />
                    <GridViewColumn Header="Category" Width="120" DisplayMemberBinding="{Binding CategoryName}" />
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Price, StringFormat='Rs. {0:N2}'}" />
                    <GridViewColumn Header="Discount %" Width="100" DisplayMemberBinding="{Binding DiscountPercent, StringFormat={}{0}%}" />

                    <GridViewColumn Header="Stock" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Stock, Converter={StaticResource StockToBackgroundColorConverter}}"
                    CornerRadius="4"
                    Padding="4"
                    HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Stock}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="Black"
                           FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Header="Actions" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Content="Edit"
                                            Padding="6,2"
                                            Margin="0,0,8,0"
                                            Background="#E0F2FE"
                                            Foreground="#0284C7"
                                            BorderBrush="#0284C7"
                                            Click="EditItem_Click"/>
                                    <Button Content="Delete"
                                            Padding="6,2"
                                            Background="#FEE2E2"
                                            Foreground="#B91C1C"
                                            BorderBrush="#B91C1C"
                                            Click="DeleteItem_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
